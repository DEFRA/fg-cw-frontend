{% macro defraOrderedList(params, renderDefraComponent) %}
  {%- set items = params.items or [] %}
  {%- set classes = params.classes or 'govuk-list govuk-list--number' %}
  {%- set spaced = params.spaced or false %}
  {%- set id = params.id or '' %}

  <ol{% if id %} id="{{ id }}"{% endif %} class="{{ classes }}{% if spaced %} govuk-list--spaced{% endif %}">
    {% for item in items %}
      <li>
        {% if item.component %}
          {{ renderDefraComponent(item) }}
        {% else %}
          {{ item.text | safe }}
        {% endif %}
      </li>
    {% endfor %}
  </ol>
{% endmacro %}