<div class="timeline__description">
  {% if params.eventType == "NOTE_ADDED" %}
    <!-- TODO  note link? -->
    <a class="govuk-link" href="/notes">View note</a>
  {% elif params.eventType == "TASK_COMPLETED" %}
    <!-- TODO  task link? -->
    <a
      class="govuk-link"
      href="/cases/{{ params.caseId }}/tasks/{{ params.data.taskGroupId }}/{{ params.data.taskId }}"
      >View task</a
    >
  {% endif %}

  {% if params.commentRef %}
    <p>
      <a
        href="/cases/{{ params.caseId }}/notes/?selectedNoteRef={{ params.commentRef }}#note-{{ params.commentRef }}"
        >View note</a
      >
    </p>
  {% endif %}
</div>
