{% extends '../layouts/case-detail-layout.njk' %}
{% from "../components/task-group/macro.njk" import taskGroup %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block contentMain %}
  {% if errorList and errorList.length > 0 %}
    {{
      govukErrorSummary({
        titleText: "There is a problem",
        errorList: errorList
      })
    }}
  {% endif %}

  {{ taskGroup({caseId: data.case._id, stage: data.stage, errors: errors, values: values }) }}
{% endblock %}
