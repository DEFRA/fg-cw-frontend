{
  "name": "fg-cw-frontend",
  "version": "0.0.0",
  "description": "FG Caseworking Frontend",
  "sideEffects": false,
  "main": "src/main.js",
  "type": "module",
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "dev": "run-p frontend:watch server:watch",
    "dev:debug": "run-p frontend:watch server:debug",
    "format": "prettier --write \"src/**/*.js\" \"**/*.{js,cjs,md,json,config.js,test.js,njk}\"",
    "format:check": "prettier --check \"src/**/*.js\" \"**/*.{js,cjs,md,json,config.js,test.js,njk}\" --plugin prettier-plugin-jinja-template",
    "frontend:watch": "NODE_ENV=development webpack --watch",
    "git:pre-commit-hook": "npm run format:check && npm run lint && npm test",
    "postinstall": "npm run setup:husky",
    "lint": "run-s lint:js lint:scss",
    "lint:js": "eslint",
    "lint:scss": "stylelint \"src/**/*.scss\" --cache --cache-location .cache/stylelint --cache-strategy content --color --ignore-path .gitignore",
    "postversion": "git add package.json package-lock.json && git commit -m $npm_package_version",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "server:watch": "nodemon ./src/main.js",
    "server:debug": "nodemon --inspect ./src/main.js",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node --use-strict .",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module"
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "prettier": {
    "plugins": [
      "prettier-plugin-jinja-template",
      "prettier-plugin-organize-imports"
    ],
    "overrides": [
      {
        "files": [
          "*.njk",
          "*.nunjucks"
        ],
        "options": {
          "parser": "jinja-template"
        }
      }
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.26.0",
    "@defra/hapi-tracing": "^1.0.0",
    "@elastic/ecs-pino-format": "^1.5.0",
    "@hapi/catbox-memory": "^6.0.2",
    "@hapi/catbox-redis": "^7.0.2",
    "@hapi/hapi": "^21.3.12",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "@hapi/wreck": "^18.1.0",
    "@hapi/yar": "^11.0.2",
    "aws-embedded-metrics": "^4.2.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "convict": "^6.2.4",
    "cssnano": "^7.0.6",
    "cssnano-preset-default": "^7.0.6",
    "date-fns": "^4.1.0",
    "global-agent": "^3.0.0",
    "govuk-frontend": "^5.9.0",
    "hapi-pino": "^12.1.0",
    "hapi-pulse": "^3.0.1",
    "ioredis": "^5.4.1",
    "lodash": "^4.17.21",
    "nunjucks": "^3.2.4",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@vitest/coverage-v8": "^3.1.4",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.2.1",
    "babel-plugin-transform-import-meta": "^2.2.1",
    "cheerio": "^1.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^9.1.6",
    "neostandard": "^0.12.1",
    "nodemon": "^3.1.7",
    "npm-run-all": "^4.1.5",
    "postcss-load-config": "^6.0.1",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.5.3",
    "prettier-plugin-jinja-template": "^2.1.0",
    "prettier-plugin-organize-imports": "^4.1.0",
    "sass-embedded": "^1.80.6",
    "sass-loader": "^16.0.3",
    "source-map-loader": "^5.0.0",
    "stylelint": "^16.10.0",
    "stylelint-config-gds": "^2.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "vitest": "^3.1.4",
    "webpack": "^5.96.1",
    "webpack-assets-manifest": "^5.2.1",
    "webpack-cli": "^5.1.4"
  }
}
